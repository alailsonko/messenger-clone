# Development stage
FROM golang:1.24-alpine AS dev

# Install air for hot reloading and inotify-tools for file watching
RUN go install github.com/air-verse/air@latest && \
    apk add --no-cache inotify-tools

WORKDIR /app

# Copy air config
COPY .air.toml .

# Copy project files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

CMD ["air", "-c", ".air.toml"]
